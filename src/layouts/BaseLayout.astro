---
import DefaultSEO from "@components/DefaultSEO.astro";
import Footer from "@components/Footer.astro";
import GlobalStyles from "@components/GlobalStyles.astro";
import Header from "@components/Header.astro";
import PostSEO from "@components/PostSEO.astro";
import { ClientRouter } from "astro:transitions";
import type { CollectionEntry } from "astro:content";

interface Props {
  title?: string;
  post?: CollectionEntry<"posts">;
}
const { title, post } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link
      rel="alternate"
      type="application/rss+xml"
      title="function()"
      href={new URL("rss.xml", Astro.site)}
    />

    {post ? <PostSEO post={post} /> : <DefaultSEO title={title} />}

    <script
      defer
      src="https://analytics.arash.codes/script.js"
      data-website-id="0160d1ab-d18b-4fce-b392-177af5c32248"></script>

    <ClientRouter />
  </head>

  <body>
    <Header />

    <slot />

    <Footer />
    <GlobalStyles />
  </body>
</html>
