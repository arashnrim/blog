<head>
  <link href="/pagefind/pagefind-ui.css" rel="stylesheet" />
  <script src="/pagefind/pagefind-ui.js" is:inline></script>
</head>

<div id="search"></div>
<script>
  window.addEventListener("DOMContentLoaded", (event) => {
    // @ts-ignore
    new PagefindUI({
      element: "#search",
      showSubResults: true,
      showImages: false,
      baseUrl: "/",
    });
  });
</script>

<style>
  #search {
    --pagefind-ui-scale: 1;
    --pagefind-ui-text: #fff;
    --pagefind-ui-background: #0a0a0a;
    --pagefind-ui-border: #1f1f1f;
    --pagefind-ui-border-width: 3px;
    --pagefind-ui-border-radius: calc(var(--radius) * 0.5);
    --pagefind-ui-font: "General Sans", system-ui, -apple-system,
      BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell,
      "Open Sans", "Helvetica Neue", sans-serif;
  }
</style>
