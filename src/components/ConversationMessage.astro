---
const { fromSelf, senderName } = Astro.props;
---

<div class:list={[{ conversation__self: fromSelf }, "conversation__message"]}>
  <slot class="test" />
  <span class="conversation__message_sender"
    >{fromSelf ? "Me" : senderName || ""}</span
  >
</div>

<style>
  .conversation__message {
    padding: 1em;
    border-radius: var(--radius);
    border: 1px solid #2a2a2a;
  }

  .conversation__message_sender {
    font-size: 0.8em;
    color: #8a8a8a;
  }

  .conversation__self {
    text-align: right;
    margin-left: auto;
    margin-right: 0;
  }

  @media screen and (min-width: 768px) {
    .conversation__message {
      max-width: 66%;
    }
  }
</style>
